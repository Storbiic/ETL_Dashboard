# ETL Dashboard Production Environment Configuration

# Application Environment
NODE_ENV=production
FLASK_ENV=production
FLASK_DEBUG=false

# FastAPI Backend Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=false

# Flask Frontend Configuration  
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_SECRET_KEY=your-production-secret-key-here

# Logging Configuration (Production)
LOG_LEVEL=WARNING
LOG_FORMAT=json
LOG_FILE=/app/logs/etl_dashboard.log

# Data Storage Paths (Docker paths)
UPLOAD_FOLDER=/app/data/uploads
PROCESSED_FOLDER=/app/data/processed
PIPELINE_OUTPUT_FOLDER=/app/data/pipeline_output

# File Upload Configuration
MAX_UPLOAD_SIZE=200MB
ALLOWED_EXTENSIONS=xlsx,xls

# Database Configuration
DATABASE_URL=sqlite:////app/data/processed/etl.sqlite

# API Configuration
API_RATE_LIMIT=500
API_TIMEOUT=600

# Security Configuration
CORS_ORIGINS=https://your-domain.com,http://your-domain.com

# Docker Network Configuration
FASTAPI_BACKEND_HOST=backend
FASTAPI_BACKEND_PORT=8000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=5

# Performance Configuration
WORKERS=2
MAX_CONNECTIONS=200
KEEP_ALIVE=65

# Feature Flags (Production)
ENABLE_AUTO_PIPELINE=true
ENABLE_PROFILING=false
ENABLE_METRICS=true

# Data Processing Configuration
MAX_PREVIEW_ROWS=500
MAX_COLUMNS_PROFILE=200
CHUNK_SIZE=5000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=7200

# Pipeline Configuration
POWERBI_TEMPLATES_FOLDER=/app/powerbi/templates
AUTO_COPY_TO_PIPELINE=true

# ETL Configuration
DEFAULT_ID_COLUMN=YAZAKI PN