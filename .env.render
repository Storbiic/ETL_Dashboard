# Environment configuration for Render deployment
# This file contains production settings for Render.com deployment

# Application Environment
ENV=production
FLASK_ENV=production
FLASK_DEBUG=false

# Database Configuration (if using external database)
# DATABASE_URL will be provided by Render if you add a database service

# File Storage
UPLOAD_FOLDER=data/uploads
PROCESSED_FOLDER=data/processed
PIPELINE_OUTPUT_FOLDER=data/pipeline_output
MAX_CONTENT_LENGTH=16777216

# API Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# For Render deployment, backend URL should be localhost since both services run in same container
BACKEND_URL=http://localhost:8000

# Security
FLASK_SECRET_KEY=your-production-secret-key-change-this

# Logging
LOG_LEVEL=INFO

# Excel Processing
MAX_FILE_SIZE_MB=16
ALLOWED_EXTENSIONS=xlsx,xls

# Render specific
RENDER=true

# Pipeline Processing
ENABLE_ENHANCED_PLANT_STATUS=true
ENABLE_STATUS_RULES=true
ENABLE_MASTERBOM_RULES=true

# Data Quality
ENABLE_DATA_PROFILING=true
ENABLE_DATA_VALIDATION=true

# Performance
PANDAS_CHUNKSIZE=10000
MAX_WORKERS=2

# Cache Settings
ENABLE_CACHING=false

# Monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30