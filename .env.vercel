# Environment configuration for Vercel deployment
PYTHONPATH=/var/task:/var/task/backend
UPLOAD_FOLDER=/tmp/uploads
PROCESSED_FOLDER=/tmp/processed
PIPELINE_OUTPUT_FOLDER=/tmp/pipeline_output

# Application settings
ENV=production
FLASK_ENV=production
FLASK_DEBUG=false

# File upload settings
MAX_CONTENT_LENGTH=16777216
MAX_FILE_SIZE_MB=16
ALLOWED_EXTENSIONS=xlsx,xls

# Security
FLASK_SECRET_KEY=your-production-secret-key-change-this

# Processing settings
ENABLE_ENHANCED_PLANT_STATUS=true
ENABLE_STATUS_RULES=true
ENABLE_MASTERBOM_RULES=true
ENABLE_DATA_PROFILING=true
ENABLE_DATA_VALIDATION=true

# Performance
PANDAS_CHUNKSIZE=10000
MAX_WORKERS=2
ENABLE_CACHING=false

# Logging
LOG_LEVEL=INFO

# Vercel specific
VERCEL=true